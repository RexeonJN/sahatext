<%- include('../includes/head.ejs') %>
    
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/loginform.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
  
<% if (errorMessage) { %>
    <div class="user-message user-message--error"><%= errorMessage %></div>
<% } %>
    <div class="lin">
    <div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card border-0 shadow rounded-3 my-5">
            <div class="card-body p-4 p-sm-5">
              <h5 class="card-title text-center mb-5 fw-light fs-5">Add Category</h5>
              <form action="/admin/<% if (editing) { %>edit-category<% } else { %>add-category<% } %>" method="POST" enctype="multipart/form-data">
                <div class="form-floating mb-3">
                    <label for="title">Title</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid' : '' %>"
                    type="text" 
                    name="title" 
                    id="title" 
                    value="enter new category name">
                </div>
  
                
                <div class="d-grid">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit"><% if (editing) { %>Update Category<% } else { %>Add Category<% } %></button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
    <%- include('../includes/end.ejs') %>
  
  